<Window x:Class="NumberGuess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumberGuess"
        mc:Ignorable="d"
        Title="NumberGuesser" Height="159" Width="469">
    <Grid Margin="0,0,2,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="113*"/>
            <ColumnDefinition Width="404*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Enter a number" HorizontalAlignment="Left" Margin="24,38,0,0" VerticalAlignment="Top" Height="23" Width="148" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="106,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" Grid.Column="1" Name="UserNumber" />
        <Button Content="Submit" Grid.Column="1" HorizontalAlignment="Left" Margin="64,84,0,0" VerticalAlignment="Top" Width="75" Click="Submit"/>

    </Grid>
</Window>
